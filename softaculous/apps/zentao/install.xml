<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{db_set}}</heading>
			<input type="text" name="dbprefix" size="30" value="zn_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="ZenTao">
			<head>{{site_name}}</head>
			</input>
		</group>	
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
				<handle>__admin_pass</handle>
			</input>						
		</group>
		<group>
			<heading>{{ad_lang}}</heading>
			<input type="select">
				<select name="language">
					<option value="en">English</option>
					<option value="zh-cn">Chinese (Simplified)</option>
					<option value="zh-tw">Chinese (Traditional)</option>
				</select>
				<head>{{select_lang}}</head>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<files>
		<exclude>www/install.php</exclude>
		<exclude>www/upgrade.php</exclude>
	</files>
</softinstall>