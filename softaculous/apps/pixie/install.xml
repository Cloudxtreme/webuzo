<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="My Blog">
				<head>{{site_name}}</head>
			</input>
			<input type="text" name="site_desc" size="30" value="Welcome to my Pixie Blog">
				<head>{{site_desc}}</head>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
			</input>
			<input type="text" name="admin_realname" size="30" value="Admin">
				<head>{{real_name}}</head>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<files>
		<exclude>admin/install/*</exclude>
		<exclude>admin/install/*/*</exclude>
		<exclude>admin/install/*/*/*</exclude>
		<exclude>admin/install/*/*/*/*</exclude>
	</files>
</softinstall>