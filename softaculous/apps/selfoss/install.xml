<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{db_set}}</heading>
			<input type="text" name="dbprefix" size="30" value="sf_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<cron>
		<min>{rand(0,59)}</min>
		<hour>{rand(0,23)}</hour>
		<day>*</day>
		<month>*</month>
		<weekday>*</weekday>
		<command>wget -O /dev/null [[softurl]]/update</command>
	</cron>
</softinstall>