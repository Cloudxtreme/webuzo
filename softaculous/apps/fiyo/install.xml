<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="Fiyo CMS">
				<head>{{site_name}}</head>
			</input>
			<input type="text" name="admin_folder" size="30" value="admin123" save="true">
				<head>{{ad_dir}}</head>
			</input>
		</group>
		<group>
			<heading>{{db_set}}</heading>
			<input type="text" name="dbprefix" size="30" value="fc_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
		</group>
		<group>
			<heading>{{ad_lang}}</heading>
			<input type="select">
				<select name="language">
					<option value="en">English</option>
					<option value="id">Indonesian</option>
				</select>
				<head>{{select_lang}}</head>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<files>
		<exclude>system/installer/*</exclude>
		<exclude>system/installer/*/*</exclude>
		<exclude>system/installer/*/*/*</exclude>
		<exclude>system/installer/*/*/*/*</exclude>
		<exclude>system/installer/*/*/*/*/*</exclude>
		<exclude>system/installer/*/*/*/*/*/*</exclude>
	</files>
</softinstall>