<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="Site Name">
				<head>{{site_name}}</head>
			</input>
		</group>
		<group>
			<heading>{{db_set}}</heading>
			<input type="text" name="dbprefix" size="30" value="odm_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="password">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
			<input type="text" name="admin_fname" size="30" value="System">
				<head>{{f_name}}</head>
			</input>
			<input type="text" name="admin_lname" size="30" value="Administrator">
				<head>{{l_name}}</head>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
		</group>
		<group>
			<heading>{{ad_lang}}</heading>
			<input type="select">
				<select name="language">
					<option value="english">English</option>
					<option value="chinese">Chinese</option>
					<option value="croatian">Croatian</option>	
					<option value="czech">Czech</option>
					<option value="danish">Danish</option>
					<option value="dutch">Dutch</option>
					<option value="french">French</option>
					<option value="german">German</option>
					<option value="italian">Italian</option>
					<option value="portuguese">Portuguese</option>
					<option value="spanish">Spanish</option>
					<option value="turkish">Turkish</option>
					<option value="romanian">Romanian</option>
					<option value="arabic">Arabic</option>
					<option value="tamil">Tamil</option>
				</select>
				<head>{{select_lang}}</head>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<datadir>odmdata</datadir>
	<files>
		<exclude>install/*</exclude>
		<exclude>install/*/*</exclude>
		<exclude>install/*/*/*</exclude>
		<exclude>install/*/*/*/*</exclude>
	</files>
</softinstall>