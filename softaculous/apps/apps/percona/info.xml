	<initd name="percona">/usr/local/apps/percona/bin/perconactl</initd>
	
	<extract file="percona-$arch.tar.gz">$appsdir</extract>
	<extract file="phpmyadmin.zip">$webuzowww/phpmyadmin</extract>
	
	<symlink target="/usr/bin/mysql">/usr/local/apps/percona/bin/mysql</symlink>
	<symlink target="/usr/bin/mysqladmin">/usr/local/apps/percona/bin/mysqladmin</symlink>
	<symlink target="/usr/bin/mysqld_safe">/usr/local/apps/percona/bin/mysqld_safe</symlink>
	<symlink target="/usr/bin/mysql_install_db">/usr/local/apps/percona/bin/mysql_install_db</symlink>
	
	<is_default>16_1</is_default>
	<is_default>82_1</is_default>
