<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="comp_name" size="30" value="PetFair, Inc.">
				<head>{{comp_name}}</head>
			</input>
			<input type="text" name="store_name" size="30" value="SurfShop PetFair Store">
				<head>{{store_name}}</head>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="password">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<www>ssfiles</www>
	<datadir>ssdata</datadir>
</softinstall>